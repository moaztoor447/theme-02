{% for block in section.blocks %}
	{% assign bl_it = block.settings %}
	<div class="widget_acc_item">
		{% for i in (1..6) %}
			{% capture header %}element_{{ i }}_header{% endcapture %}
			{% capture text %}element_{{ i }}_text{% endcapture %}
			{% capture toggle %}widget_open_toggle_{{ i }}{% endcapture %}
			
			{% if bl_it[header].size > 0 %}
				<div class="widget_acc_element">
					<div class="element_title h6 widget_toggle{% if bl_it[toggle] %} open{% endif %}" data-tab="{{ i | minus: 1 }}">{{ bl_it[header] }}<svg width="9" height="6" viewBox="0 0 9 6" xmlns="http://www.w3.org/2000/svg"><path d="M9 1.5L7.5 0L4.5 3L1.5 0L0 1.5L4.5 6L9 1.5Z" /></svg></div>
					<div class="element_text content-widget_toggle">{{ bl_it[text] }}</div>
				</div>
			{% endif %}
		{% endfor %}
	</div>
{% endfor %}