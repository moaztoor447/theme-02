					</svg>
					<div class="h6">Restore Password</div> 
				</a>
			</div>
		</div>
	</div>
	

	{% comment %} REGISTER {% endcomment %}
	<div id="account_section__register" class="account_section account_section__register container-sm">
		<div class="customer_item_wrap">
			<div class="mb-3 h3 close-wrapper">{{ 'customer.register_form.title' | t }} <a class="link_close account_register__close" href="#" title="{{ 'customer.register_form.close' | t }}">
					<svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path fill-rule="evenodd" clip-rule="evenodd" d="M13.7156 5L15 6.14286L10.993 10L15 13.8571L13.7156 15L9.95417 11.2857L6.28442 15L5 13.8571L8.9342 10L5 6.14286L6.28442 5L9.95417 8.71429L13.7156 5Z" />
					</svg>
				</a></div>
			{% form 'create_customer' %}
				<input type="hidden" id="password_confirmed" name="customer[password]">

				{{ form.errors | default_errors | replace: 'errors', 'alert alert-danger' }}
				<div class="form-group row">
					<div class="col-12 text-left">
						<label for="first_name">{{ 'customer.register_form.first_name' | t }}</label>
					</div>
					<div class="form-control-content col-12">
						<input type="text" value="" name="customer[first_name]" id="first_name" class="form-control">
					</div>
				</div>

				<div class="form-group row">
					<div class="col-12 text-left">
						<label for="last_name">{{ 'customer.register_form.last_name' | t }}</label>
					</div>
					<div class="form-control-content col-12">
						<input type="text" value="" name="customer[last_name]" id="last_name" class="form-control">
					</div>
				</div>

				<div class="form-group row">
					<div class="col-12 text-left">
						<label for="email">{{ 'customer.register_form.email' | t }}</label>
					</div>
					<div class="form-control-content col-12">
						<input type="email" value="" name="customer[email]" id="email" class="form-control">
					</div>
				</div>

				<div class="form-group row">
					<div class="col-12 text-left">
						<label for="password_1">{{ 'customer.register_form.password' | t }}</label>
					</div>
					<div class="form-control-content col-12">
						<div class="input-group">
							<input class="form-control js-visible-password" type="password" value="" name="customer[password]" id="password_1">
							<div class="input-group-append">
								<div class="input-group-text" data-action="show-password">
