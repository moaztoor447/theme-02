<div class="template_customer template_customer__login">

	<h1 class="page_heading">{{ page_title }}</h1>
		
	{% comment %} NAVIGATION {% endcomment %}
	<div id="account_section__wrapper" class="container-sm mt-4">
		<div class="customer_wrapper row justify-content-center">
			<div class="col-6 col-md-3 col-xl-4 mb-3">
				<a href="#" id="account_login__link" class="customer_block customer_block__login">
