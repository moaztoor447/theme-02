
<div class="section-style-{{ section.id }}">
  {%- include 'section-style' -%}
      {%- style -%}
          .bgvideo-{{ section.id }} {
            padding: {{ section.settings.padding_desktop }}px 0;
          }
          @media (max-width:991px){
            .bgvideo-{{ section.id }} {
               padding: {{ section.settings.padding_mobile }}px 0;
            }
          }
         .bgvideo-{{ section.id }}::before{
           content:"";
           position: absolute;
           top: 0;
           left: 0;
           right: 0;
           bottom: 0;
           z-index: 1;
           background-color: {{ section.settings.bg_overlay }};
           opacity: {{ section.settings.opacity_bg_overlay }};
        }
        .bgvideo-{{ section.id }} .parallax-banner__meta::before{
           background-color: {{ section.settings.bg_box }};
           opacity: {{ section.settings.opacity_bgbox }};
        }
     {%- endstyle -%}
  <div class="{{ section.settings.container_width }}">
  <div class="section-block">
    <div class=" bgvideo-{{ section.id }} txt-{{ section.settings.align }} bg-zmzvideo" data-section-id="{{ section.id }}" data-section-type="background-video">
        {% if section.settings.link_video != blank %}
        <div class="zmz-video">
         <video id="Mp4{{ section.id }}" src="{{ section.settings.link_video }}" loop="" muted="" playsinline="" autoplay="" ></video>
        </div>
        {% else if %}
        <div class="zmz-video">
                {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
        {% endif %}
      <div class="block-caption {% if section.settings.inverted %} inverted{% endif %} bg-zmzvideo-meta">
  
          
        {%- if section.settings.subtitle != blank -%}
          <div class="h6 mb-0">
            {{ section.settings.subtitle }}
          </div>
        {%- endif -%}
        
        {%- if section.settings.title != blank -%}
          <h2 class="{% if section.settings.setwidth == 'container' %} h2{% else %} h1{% endif %} mb-0">
            {{ section.settings.title }}
          </h2>
        {%- endif -%}
  
        {%- if section.settings.subtext != blank -%}
          <div class="text mb-0">
            {{ section.settings.subtext }}
          </div>
        {%- endif -%}
  
        {%- if section.settings.button != blank and section.settings.link != blank -%}
          <div class="parallax-banner__btn">
            <a href="{{ section.settings.link }}" class="link link--primary">
              {{ section.settings.button | escape }}
            </a>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
  </div>
  </div>
  {% schema %}
  {
    "name": "Background Video",
    "class": "index-section",
    "settings": [
      {
        "type":      "select",
        "id":        "container_width",
        "label":     "Container width",
        "options": [
          {
            "value": "container",
            "label": "Box"
          },
          {
            "value": "container-fluid",
            "label": "Container Fluid"
          },
          {
            "value": "full-width",
            "label": "Full"
          }
        ],
        "default":   "container"
      },
      {
        "type": "text",
        "id": "inset_section",
        "label": "Inset Section",
        "default": "0px 0px 0px 0px",
        "info": "inset: Top Right Bottom Left (px/em/%/). Or use one value if all insets are equal"
      },
    
      {
        "type": "text",
        "id": "offset_section",
        "label": "Offset Section",
        "default": "0px 0px 0px 0px",
        "info": "offset: Top Right Bottom Left"
      },
    
      {
        "type": "color",
        "id": "bg_section",
        "label": "Background Section",
        "default": "#ffffff"
      },
      {
        "type": "select",
        "id": "align",
        "label": "Text align",
        "default": "right",
        "options": [
          {
            "label": "Left",
            "value": "left"
          },
          {
            "label": "Center",
            "value": "center"
          },
          {
            "label": "Right",
            "value": "right"
          }
        ]
      },
      {
        "type": "range",
        "id": "padding_desktop",
        "min": 100,
        "max": 500,
        "step": 10,
        "unit": "px",
        "label": "Padding desktop",
        "default": 300
      },
      {
        "type": "range",
        "id": "padding_mobile",
        "min": 0,
        "max": 300,
        "step": 10,
        "unit": "px",
        "label": "Padding mobile",
        "default": 80
      },
      {
        "type": "color",
        "id": "bg_box",
        "label": "Background Boxed",
        "default": "#fff"
      },
      {
        "type": "range",
        "id": "opacity_bgbox",
        "min": 0,
        "max": 1,
        "step": 0.1,
        "label": "Opacity Background Boxed",
        "default": 1
      },
      {
        "type": "color",
        "id": "bg_overlay",
        "label": "Background Overlay",
        "default": "#000"
      },
      {
        "type": "range",
        "id": "opacity_bg_overlay",
        "min": 0,
        "max": 1,
        "step": 0.1,
        "label": "Opacity Overlay",
        "default": 0.1
      },

      {
        "type": "checkbox",
        "id": "inverted",
        "label": "Inverted",
        "default": false
      },

      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Elements"
      },
    
      {
        "type": "textarea",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "Subtitle"
      },

      {
        "type": "textarea",
        "id": "subtext",
        "label": "Subtext",
        "default": "Subtext"
      },
           
      {
        "type": "text",
        "id": "button",
        "label": "Button text",
        "default": "discover now"
      },

      {
        "type": "url",
        "id": "link",
        "label": "Link",
        "info": "Optional"
      },
      {
        "type": "textarea",
        "id": "link_video",
        "label": "Link Video",
        "info": "Upload video in your host"
      }
    ],
    "presets": [
      {
        "name": "Background Video",
        "category": "Video"
      }
    ]
  }
  {% endschema %}