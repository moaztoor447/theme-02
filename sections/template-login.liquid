					<a href="/account/logout" class="customer_block text-center customer_block__reset">
						<svg class="mb-1" width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M30.6667 33.3327L30.6667 6.66601L19 6.66601L19 3.33268L32.3333 3.33268C32.7754 3.33268 33.1993 3.50827 33.5118 3.82083C33.8244 4.13339 34 4.55732 34 4.99935L34 34.9993C34 35.4414 33.8244 35.8653 33.5118 36.1779C33.1993 36.4904 32.7754 36.666 32.3333 36.666L19 36.666L19 33.3327L30.6667 33.3327ZM14 18.3327L25.6667 18.3327L25.6667 21.666L14 21.666L14 29.9993L4 19.9993L14 9.99935L14 18.3327Z" fill="#121212"/>
						</svg>
						<h5>{{ 'customer.account.logout' | t }}</h5>
					</a>
				</div>
			</div>
		</div>
	 
	{% else %}
	
	{% comment %} NAVIGATION {% endcomment %}
	<div id="account_section__wrapper" class="mt-4">
		<div class="customer_wrapper row">
				
				{% comment %} LOGIN {% endcomment %}
				<div id="account_section__login"  class="account_section account_section__login p-xl-6 p-md-4 col-md-6 mt-4">
					<div class="customer_item_wrap container-sm mr-auto ml-0 px-0">
					 
						{% form 'customer_login' %} 
						 
						 <h2 class="mb-3 h4 close-wrapper">{{ 'customer.login_form.title' | t }}</h2>
						{% unless template.name == 'register' %}
						{{ form.errors | default_errors | replace: 'errors', 'alert alert-danger' }}
						{% endunless %}
						<div class="form-group row">
							<div class="col-12 text-left">
								<label for="customer_email">{{ 'customer.login_form.email' | t }}</label>
							</div>
							<div class="form-control-content col-12">
								<input type="email" value="" placeholder="Text" name="customer[email]" required="required" id="customer_email" class="form-control {% if form.errors contains "email" %}error{% endif %}">
							</div>
						</div>
						
						{% if form.password_needed %}
							<div class="form-group row">
								<div class="col-12 text-left">
									<label for="customer_password">{{ 'customer.login_form.password' | t }}</label>
								</div>
								<div class="form-control-content col-12">
									<div class="input-group">
										<input type="password" placeholder="Password" value="" required="required" name="customer[password]" id="customer_password" class="form-control js-visible-password {% if form.errors contains "password" %} error{% endif %}">
